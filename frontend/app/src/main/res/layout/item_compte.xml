<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView pour l'ID du compte -->
    <TextView
        android:id="@+id/accountId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID du compte"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- TextView pour le solde du compte -->
    <TextView
        android:id="@+id/accountBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solde"
        android:textSize="18sp"
        android:textColor="@color/primaryColor"
        android:layout_marginBottom="8dp" />

    <!-- TextView pour la date de création du compte -->
    <TextView
        android:id="@+id/accountCreationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date de création"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <!-- TextView pour le type de compte -->
    <TextView
        android:id="@+id/accountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type de compte"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <!-- Bouton pour mettre à jour le compte -->
    <Button
        android:id="@+id/updateAccountButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Mettre à jour"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primaryColor"
        android:layout_marginBottom="12dp" />

    <!-- Bouton pour supprimer le compte -->
    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Supprimer"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/secondaryColor"
        android:layout_marginBottom="12dp" />

</LinearLayout>

